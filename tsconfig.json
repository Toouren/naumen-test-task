{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "target": "es2018",
    "lib": ["es2018",
      "es6",
      "dom"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,

    "strict": false,
    "strictPropertyInitialization": false,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
